@model List<MVCwithoutEF.Models.Book>

@{
    ViewData["Title"] = "Index";
}
<div class="jumbotron">
    <h1 class="text-center">
        @ViewData["Title"]
    </h1>
</div>

<h1>Index</h1>


    

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                Book Title
            </th>
            <th>
                Author
            </th>
            <th>
                Price
            </th>
            <th><a asp-action="AddorEdit">Create New</a></th>
        </tr>
    </thead>
    <tbody>
@foreach(var book in Model) {
        <tr>
            <td>
                @book.Title
            </td>
            <td>
                @book.Author
            </td>
            <td>
                @book.Price
            </td>
            <td>
                <a asp-action="AddorEdit" asp-route-id="@book.Bookid">AddorEdit</a> |
               
                <a asp-action="Delete" asp-route-id="@book.Bookid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
